pipeline {
    agent any
    environment {
        BRANCH_NAME = "${GIT_BRANCH}"
        varPath = "vars/" + "${BRANCH_NAME}"
        apicInventory = "./creds/inv-" + "${BRANCH_NAME}"
    }
    stages {
        stage('Create Certificate User') {
            steps {
              ansiblePlaybook(
              playbook: './aci/aciDelete-cert-auth.yml',
              inventory: '$apicInventory',
              colorized: true
              )
            }
        }
    }
}